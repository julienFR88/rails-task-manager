<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed == true %>
  <input type="checkbox" disabled checked>
<% else %>
  <input type="checkbox" disabled>
<% end %>

<%= link_to 'back to list', tasks_path %>
<%= link_to 'edit', edit_task_path(@task)  %>
<%= link_to 'delete', task_path(@task), method: :delete  %>
